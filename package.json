{
    "name": "cfml-comment-tags",
    "displayName": "",
    "description": "Coldfusion comment tags shortcut",
    "version": "0.2.0",
    "publisher": "trst",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.cfml-comment-tags"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.cfml-comment-tags",
                "title": "Wrap in or add Coldfusion comment tags"
            }
        ],
        "keybindings": [
            {
                "command": "extension.cfml-comment-tags",
                "key": "ctrl+shift+m",
                "mac": "cmd+shift+m",
                "when": "editorTextFocus && editorLangId == lang-cfml"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}